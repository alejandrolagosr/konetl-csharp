            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Canvas>
            <my:Menu/>
        </Canvas>

        <Grid Grid.Row="0"  Margin="10 0 10 20">
            <MediaElement Name="backgroundMusic" Volume="0.9" Visibility="Hidden">
                <MediaElement.Triggers>
                    <EventTrigger RoutedEvent="MediaElement.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <MediaTimeline Source="../../Resources/CarabianCoconut.mp3"   Storyboard.TargetName="backgroundMusic" RepeatBehavior="Forever" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </MediaElement.Triggers>
            </MediaElement>

            <k:KinectUserViewer k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <k:KinectSensorChooserUI HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="sensorChooserUi" />


        </Grid>

        <k:KinectRegion x:Name="kinectRegion" Margin="0,40,0,0" Grid.RowSpan="2">
            <Grid x:Name="kinectRegionGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="170" />
                </Grid.RowDefinitions>

                <WrapPanel VerticalAlignment="Top" HorizontalAlignment="Right" x:Name="wrapPanelBar">
                    <k:KinectCircleButton Click="AboutButton_Click" BorderThickness="0" ContentForeground="{x:Null}" Foreground="{x:Null}" Height="100" Width="100" Margin="20,0,20,50"  >
                        <k:KinectCircleButton.Background>
                            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/buttom_about.png"/>
                        </k:KinectCircleButton.Background>
                    </k:KinectCircleButton>
                    <k:KinectCircleButton Click="ExitButton_Click" ContentForeground="{x:Null}" Foreground="{x:Null}" BorderThickness="0" Width="100" Height="100" Margin="30,0,20,50" >
                        <k:KinectCircleButton.Background>
                            <ImageBrush ImageSource="Resources/buttom_X.png" Stretch="Uniform"/>
                        </k:KinectCircleButton.Background>
                    </k:KinectCircleButton>
                </WrapPanel>

                <WrapPanel VerticalAlignment="Center" x:Name="wrapPanel" Orientation="Vertical" Height="250" Margin="370,225,0,35">
                    <k:KinectTileButton Click="KinectTileButtonMonkey_Click" Style="{DynamicResource KinectMonkeyPunch}" Margin="0,0,100,0" RenderTransformOrigin="0.5,0.5" Padding="0,0,20,0">
                        <k:KinectTileButton.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </k:KinectTileButton.RenderTransform>
                    </k:KinectTileButton>
                    <k:KinectTileButton Click="KinectTileButtonApple_Click" Style="{DynamicResource KinectAppleCatch}" Margin="0,0,30,0" RenderTransformOrigin="0.5,0.5">
                        <k:KinectTileButton.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </k:KinectTileButton.RenderTransform>
                    </k:KinectTileButton>
                    <!--<k:KinectTileButton Label="1" Click="TileButtonGameThreeClick"/-->
                </WrapPanel>
            </Grid>
        </k:KinectRegion>
    </Grid>
</Window>
